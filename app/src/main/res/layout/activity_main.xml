<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/activbg">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               style="@style/tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:layout_marginStart="12dp"
               android:text="@string/cuboid" />

    <TextView
        android:text="@string/solve_for"
        android:textAlignment="center"
        style="@style/tv" />

    <Spinner android:id="@+id/spinnerCuboid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:entries="@array/cuboid"/>

    <TextView android:id="@+id/formula"
        style="@style/tv"
        android:layout_gravity="start"
        android:layout_marginStart="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/entry1"
            style="@style/EntriesStyle" />

        <EditText
            android:id="@+id/tf1"
            style="@style/EtStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/entry2"
            style="@style/EntriesStyle"/>

        <EditText
            android:id="@+id/tf2"
            style="@style/EtStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/entry3"
            style="@style/EntriesStyle"/>

        <EditText
            android:id="@+id/tf3"
            style="@style/EtStyle"/>

    </LinearLayout>

    <Button android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/calculate"/>

    <TextView android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>

           <TextView
               style="@style/tv"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:layout_marginStart="12dp"
               android:text="@string/cylinder" />

    <TextView
        android:text="@string/solve_for"
        android:textAlignment="center"
        style="@style/tv" />

    <Spinner android:id="@+id/spinnerCylinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:entries="@array/cylinder"/>

    <TextView android:id="@+id/cyleFormula"
        style="@style/tv"
        android:layout_gravity="start"
        android:layout_marginStart="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/cEntry1"
            style="@style/EntriesStyle"/>

        <EditText
            android:id="@+id/cTf1"
            style="@style/EtStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/cEntry2"
            style="@style/EntriesStyle"/>

        <EditText
            android:id="@+id/cTf2"
            style="@style/EtStyle"/>

    </LinearLayout>

           <Button android:id="@+id/cyleCalculateButton"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/calculate"/>

           <TextView android:id="@+id/cyleResult"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textAlignment="center"/>

       </LinearLayout>
   </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>